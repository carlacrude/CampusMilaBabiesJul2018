
<section class="pesquisa">
<div>
  <%= form_tag(au_pairs_path, method: "get") do %>
    <div>
      <%= label_tag :query, "Buscar por" %>
      <%= text_field_tag :query %>
      <%= submit_tag "Buscar", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
</section>



<h3>Babás</h3>

<% if @aupairs.empty? %>
  <%= 'Nenhuma babá encontrada' %>
<% end %>

<% @aupairs.each do |aupair| %>
  <section class="baba" id='aupair-<%= aupair.id %>'> 
    <h1><%= aupair.name %></h1>
    <div class="foto">
      <%= image_tag aupair.photo.url(:thumb) %>
      <label class="cidade"> Cidade: <%= aupair.city %></label>
    </div>
    <div class="texto">
      <ul>
        <li>Habilidades: <%= aupair.skills %></li>
        <li>Formação: <%= aupair.degree %></li>
        <li>Avaliação: <%= aupair.rate %></li>
        <li>  Depoimentos: 0</li>
      </ul>
      <button class="ver_mais">Ver mais</button>
      <%= link_to 'Fazer Contratação', new_au_pair_proposal_path(aupair) %>
    </div>
  </section>
<% end %>