<div>
  <%= form_tag(au_pairs_path, method: "get") do %>
    <div>
      <%= label_tag :query, "Buscar por" %>
      <%= text_field_tag :query %>
      <%= submit_tag "Buscar", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<h3>Babás</h3>

<% if @aupairs.empty? %>
  <%= 'Nenhuma babá encontrada' %>
<% end %>

<% @aupairs.each do |aupair| %>
  <div class='card'>
    <div class='card-body'>
      <h5 class='card-title'><%= aupair.name %></h5>
      Habilidades: <%= aupair.skills %> <br/>
      Formação: <%= aupair.degree %> <br/>
      Cidade: <%= aupair.city %> <br/>
      Avaliação: <%= aupair.rate %> <br />
      Depoimentos: 0
    </div>
  </div>
<% end %>